<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/profile_imageview_comments_adapter_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/comment_background"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fullname_comments_adapter_layout"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textSize="11sp"
            android:id="@+id/date_textview_comment_adapter_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/comment_textview_comment_adapter_layout"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>