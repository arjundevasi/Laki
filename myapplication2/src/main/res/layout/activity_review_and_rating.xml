<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".ReviewAndRatingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout_review_and_rating_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_color">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_review_and_rating_activity_activity"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/line_color"/>

    <androidx.cardview.widget.CardView
        android:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_imageview_review_and_rating_activity"
            android:layout_margin="15dp"
            android:src="@drawable/homeimage1"
            android:clipToOutline="true"
            android:background="@drawable/profile_image_bg"
            android:layout_width="80dp"
            android:scaleType="centerCrop"
            android:layout_height="80dp" />

        <TextView
            android:textAlignment="center"
            android:id="@+id/fullname_textview_review_and_rating_activity"
            android:text="FOO BAR"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/ic_star_outline"
            android:layout_margin="5dp"
            android:id="@+id/rating_star_1"
            android:layout_width="0dp"
            android:layout_height="40dp" />

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/ic_star_outline"
            android:layout_margin="5dp"
            android:id="@+id/rating_star_2"
            android:layout_width="0dp"
            android:layout_height="40dp" />

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/ic_star_outline"
            android:layout_margin="5dp"
            android:id="@+id/rating_star_3"
            android:layout_width="0dp"
            android:layout_height="40dp" />

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/ic_star_outline"
            android:layout_margin="5dp"
            android:id="@+id/rating_star_4"
            android:layout_width="0dp"
            android:layout_height="40dp" />

        <ImageView
            android:layout_weight="1"
            android:src="@drawable/ic_star_outline"
            android:layout_margin="5dp"
            android:id="@+id/rating_star_5"
            android:layout_width="0dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <EditText
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:id="@+id/review_edittext_review_and_rating_activity"
        android:layout_margin="20dp"
        android:hint="write your review"
        android:textSize="@dimen/edit_text_text_size"
        android:background="@drawable/comment_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/submit_button_review_and_rating_activity"
        android:layout_margin="20dp"
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:visibility="gone"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:id="@+id/progressbar_review_and_rating_activity"
        android:layout_height="wrap_content"/>
</LinearLayout>