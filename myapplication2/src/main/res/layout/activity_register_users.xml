<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterUsersActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbarlayout_bid">

        <androidx.appcompat.widget.Toolbar
            android:background="@color/toolbar_color"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/main_toolbar"
            android:theme="?attr/actionBarTheme">

            <TextView
                android:layout_width="wrap_content"
                android:text="Register"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/register_user_activity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:id="@+id/register_user_profile_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/profile_image_placeholder"
                    android:layout_margin="15dp"
                    android:id="@+id/register_user_profile_imageview"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <TextView
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:text="Edit Image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:text="Full Name"
                android:textColor="@color/black"
                android:textSize="15sp" />



                <EditText
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/fullname_edittext_register_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/comment_background"
                    android:hint="Manish Kumar"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:text="Phone Number"
                android:textColor="@color/black"
                android:textSize="15sp" />



                <EditText
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:inputType="phone"
                    android:id="@+id/phone_number_edittext_register_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/comment_background"
                    android:hint="9876543210"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:text="Username"
                android:textColor="@color/black"
                android:id="@+id/username_textview_register_user_activity"
                android:textSize="15sp" />


                <EditText
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/username_edittext_register_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/comment_background"
                    android:hint="manishkumar21"
                    android:textColor="@color/black"
                    android:textSize="15sp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:text="Primary Location"
                android:textColor="@color/black"
                android:textSize="15sp" />


                <EditText
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/city_edittext_register_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/comment_background"
                    android:hint="Hyderabad"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            <Button
                android:id="@+id/submit_button_register_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:text="Submit" />
            <ProgressBar
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:id="@+id/register_user_progress_bar"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>